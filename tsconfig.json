{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["src/*"]
    },
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "pretty": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true
  },
  "formatCodeOptions": {
    "identSize": 2,
    "tabSize": 2
  }
}